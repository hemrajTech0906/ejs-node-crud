<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Todo</title>
</head>
<body>
  <h1>Edit Todo</h1>
  <!-- let suppose ?_method=put/PUT u can take capital and small also method="post" same scenario for that -->
  <form action="/todos/<%= todo._id %>?_method=put" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= todo.title %>" required><br>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= todo.description %></textarea><br>
    <button type="submit">Update</button>
  </form>
</body>
</html>
